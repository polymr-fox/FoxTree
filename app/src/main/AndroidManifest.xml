<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.develop.loginov.fullstack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.ArticleActivity" />
        <activity android:name=".controller.activity.EventActivity" />
        <activity android:name=".controller.activity.CourseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.loginov.fullstack.controller.activity.MainActivity" />
        </activity>
        <activity
            android:name=".controller.activity.MainActivity"
            android:label="@string/app_name">

        </activity>
    </application>

</manifest>
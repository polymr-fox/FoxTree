<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_half_vertical_margin">

        <ImageView
            android:id="@+id/menu_layout__image"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_marginStart="@dimen/default_vertical_margin"
            android:layout_marginEnd="@dimen/default_half_vertical_margin"
            tools:src="@mipmap/ic_course" />

        <TextView
            android:id="@+id/menu_layout__text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/default_vertical_margin"
            android:layout_marginEnd="@dimen/default_half_vertical_margin"

            tools:text="@string/title_courses"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/default_text_title_size" />
    </LinearLayout>

</android.support.design.card.MaterialCardView>
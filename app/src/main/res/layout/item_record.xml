<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_half_vertical_margin"
    android:layout_marginBottom="@dimen/default_half_vertical_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_vertical_margin">

        <ImageView
            android:id="@+id/item_record__image"
            android:layout_width="@dimen/mid_icon_size"
            android:layout_height="@dimen/mid_icon_size"

            android:layout_margin="@dimen/default_half_vertical_margin"

            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_record__name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_half_vertical_margin"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/default_text_title_size"


            app:layout_constraintBottom_toTopOf="@+id/item_record__content"
            app:layout_constraintStart_toEndOf="@id/item_record__image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Название" />

        <TextView
            android:id="@+id/item_record__content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_half_vertical_margin"

            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/default_text_size"
            tools:text="fsafasfasfasfasfasfafs"

            app:layout_constraintTop_toBottomOf="@id/item_record__image"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>